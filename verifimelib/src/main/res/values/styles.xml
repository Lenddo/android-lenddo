<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#FF0000</item>
        <item name="android:textColorPrimaryInverse">#FF0000</item>
        <item name="android:textColorSecondary">#FF0000</item>
        <item name="android:textColorTertiary">#FF0000</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>

    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="PhotoCaptureTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="UploadContainerStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="UploadItemTextStyle">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IndicatorImageStyle">
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FormButtonStyle">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CaptureIconStyle">
        <item name="android:background">@drawable/capture_icon_background</item>
        <item name="android:padding">40dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="stepIndicatorStyle">
        <item name="android:layout_width">@dimen/step_indicator_width</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="CircularAddButtonStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/blue_circle_background</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginBottom">@dimen/add_circle_margins</item>
        <item name="android:layout_marginRight">@dimen/add_circle_margins</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DocumentButtons">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerifiMeTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#0A2E4D</item>
        <item name="colorPrimary">#173F90</item>
        <item name="colorAccent">#173F90</item>
    </style>

</resources>